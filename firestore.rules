rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin or superadmin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin' || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Helper function to check if user is owner (for user/customer profiles)
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users: Users can read/write their own data; Admins can read/write all
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // Customers: Users can read/write their own data; Admins can read/write all
    match /customers/{customerId} {
      allow read, write: if isOwner(customerId) || isAdmin();
      allow create: if request.auth != null; // Allow signup with auth
    }
    
    // Public Content (Read: Public, Write: Admin)
    match /books/{document=**} { allow read: if true; allow write: if isAdmin(); }
    match /categories/{document=**} { allow read: if true; allow write: if isAdmin(); }
    match /subjects/{document=**} { allow read: if true; allow write: if isAdmin(); }
    match /banners/{document=**} { allow read: if true; allow write: if isAdmin(); }
    match /combos/{document=**} { allow read: if true; allow write: if isAdmin(); }
    match /coupons/{document=**} { allow read: if true; allow write: if isAdmin(); }
    match /reviews/{document=**} { 
      allow read: if true; 
      allow create: if request.auth != null;
      allow write: if isAdmin(); 
    }
    match /popups/{document=**} { allow read: if true; allow write: if isAdmin(); }
    match /pages/{document=**} { allow read: if true; allow write: if isAdmin(); }
    match /admin_notifications/{document=**} { allow read, write: if isAdmin(); }
    match /test_series/{document=**} { allow read: if true; allow write: if isAdmin(); }

    // Enquiries: Public create, Admin manage
    match /enquiries/{document=**} { 
      allow create: if true; 
      allow read, write, delete: if isAdmin(); 
    } 

    // Orders
    match /orders/{orderId} {
      // Admins can do everything
      allow delete: if isAdmin();
      
      // Users can read their own orders
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      
      // Public creation needed for guest checkout
      allow create: if true;

      // Public update needed for Payment Gateway Callback (uses Client SDK)
      // WARNING: Ideally this should be more restricted or use Admin SDK on backend
      allow update: if true;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
